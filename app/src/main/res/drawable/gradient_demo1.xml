<?xml version="1.0" encoding="utf-8"?>
<!--线性椭圆渐变-->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval"
    >
    <gradient
        android:startColor="#ff0000"
        android:centerColor="#00ff00"
        android:endColor="#0000ff"
        android:angle="90"
        />
    <stroke
        android:color="#fff"
        android:width="3dp"
        android:dashWidth="4dp"
        android:dashGap="5dp"
        />

</shape>